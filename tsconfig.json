{
  "include": ["apps/**/*.ts", "libs/**/*.ts"],
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,
    "paths": {
      "@/*": ["apps/api/src/*"],
      "@doc/*": ["apps/process-document-job/src/*"],
      "defaultLibraryPrefix/auth-lib": ["libs/tooling/auth-lib/src"],
      "defaultLibraryPrefix/auth-lib/*": ["libs/tooling/auth-lib/src/*"],
      "defaultLibraryPrefix/claude-client-lib": ["libs/claude-client-lib/src"],
      "defaultLibraryPrefix/claude-client-lib/*": ["libs/claude-client-lib/src/*"],
      "defaultLibraryPrefix/csv-lib": ["libs/tooling/csv-lib/src"],
      "defaultLibraryPrefix/csv-lib/*": ["libs/tooling/csv-lib/src/*"],
      "defaultLibraryPrefix/database-lib": ["libs/tooling/database-lib/src"],
      "defaultLibraryPrefix/database-lib/*": ["libs/tooling/database-lib/src/*"],
      "defaultLibraryPrefix/date-lib": ["libs/date-lib/src"],
      "defaultLibraryPrefix/date-lib/*": ["libs/date-lib/src/*"],
      "defaultLibraryPrefix/documents-lib": ["libs/documents-lib/src"],
      "defaultLibraryPrefix/documents-lib/*": ["libs/documents-lib/src/*"],
      "defaultLibraryPrefix/encryption-lib": ["libs/tooling/encryption-lib/src"],
      "defaultLibraryPrefix/encryption-lib/*": ["libs/tooling/encryption-lib/src/*"],
      "defaultLibraryPrefix/excel-lib": ["libs/tooling/excel-lib/src"],
      "defaultLibraryPrefix/excel-lib/*": ["libs/tooling/excel-lib/src/*"],
      "defaultLibraryPrefix/file-storage-lib": ["libs/tooling/file-storage-lib/src"],
      "defaultLibraryPrefix/file-storage-lib/*": ["libs/tooling/file-storage-lib/src/*"],
      "defaultLibraryPrefix/http-client-lib": ["libs/tooling/http-client-lib/src"],
      "defaultLibraryPrefix/http-client-lib/*": ["libs/tooling/http-client-lib/src/*"],
      "defaultLibraryPrefix/logger-lib": ["libs/tooling/logger-lib/src"],
      "defaultLibraryPrefix/logger-lib/*": ["libs/tooling/logger-lib/src/*"],
      "defaultLibraryPrefix/open-ai-client-lib": ["libs/open-ai-client-lib/src"],
      "defaultLibraryPrefix/open-ai-client-lib/*": ["libs/open-ai-client-lib/src/*"],
      "defaultLibraryPrefix/queue-lib": ["libs/tooling/queue-lib/src"],
      "defaultLibraryPrefix/queue-lib/*": ["libs/tooling/queue-lib/src/*"],
      "defaultLibraryPrefix/secrets-lib": ["libs/tooling/secrets-lib/src"],
      "defaultLibraryPrefix/secrets-lib/*": ["libs/tooling/secrets-lib/src/*"],
      "defaultLibraryPrefix/templates-lib": ["libs/features/templates-lib/src"],
      "defaultLibraryPrefix/templates-lib/*": ["libs/features/templates-lib/src/*"],
      "defaultLibraryPrefix/user-credits-lib": ["libs/features/user-credits-lib/src"],
      "defaultLibraryPrefix/user-credits-lib/*": ["libs/features/user-credits-lib/src/*"],
      "defaultLibraryPrefix/uuid-lib": ["libs/tooling/uuid-lib/src"],
      "defaultLibraryPrefix/uuid-lib/*": ["libs/tooling/uuid-lib/src/*"],
      "defaultLibraryPrefix/webhooks-lib": ["libs/features/webhooks-lib/src"],
      "defaultLibraryPrefix/webhooks-lib/*": ["libs/features/webhooks-lib/src/*"],
      "defaultLibraryPrefix/zip-lib": ["libs/tooling/zip-lib/src"],
      "defaultLibraryPrefix/zip-lib/*": ["libs/tooling/zip-lib/src/*"],
      "lib/users-lib": ["libs/features/users-lib/src"],
      "lib/users-lib/*": ["libs/features/users-lib/src/*"]
    }
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
